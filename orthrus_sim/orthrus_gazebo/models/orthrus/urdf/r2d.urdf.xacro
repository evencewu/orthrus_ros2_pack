<?xml version="1.0"?>
<robot name="gazebo1"
  xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:property name="width" value="0.2" />
  <xacro:property name="leglen" value="0.6" />
  <xacro:property name="polelen" value="0.2" />
  <xacro:property name="bodylen" value="0.6" />
  <xacro:property name="baselen" value="0.4" />
  <xacro:property name="wheeldiam" value="0.07" />

  <xacro:property name="meshes_folder" value="$(find orthrus_gazebo)/models/orthrus/meshes" />


  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>

  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>

  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <xacro:macro name="default_inertial" params="mass">
    <inertial>
      <mass value="${mass}" />
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
    </inertial>
  </xacro:macro>

  <link name="body">
    <visual>
      <origin xyz="-0.10 0.1385 -0.05" rpy="${pi/2} 0 0" />
      <geometry>
        <mesh filename="${meshes_folder}/body.STL"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <origin xyz="-0.10 0.1385 -0.05" rpy="${pi/2} 0 0" />
      <geometry>
        <mesh filename="${meshes_folder}/body.STL"/>
      </geometry>
    </collision>
    <xacro:default_inertial mass="10"/>
  </link>

  <xacro:macro name="hip" params="prefix">
    <link name="hip_${prefix}">
      <visual>
        <origin xyz="-0.02 -0.05 -0.05" rpy="0 0 0" />
        <geometry>
          <mesh filename="${meshes_folder}/hip.STL"/>
        </geometry>
        <material name="black"/>
      </visual>
      <collision>
        <origin xyz="-0.02 -0.05 -0.05" rpy="0 0 0" />
        <geometry>
          <mesh filename="${meshes_folder}/hip.STL"/>
        </geometry>
      </collision>
      <xacro:default_inertial mass="1"/>
    </link>

    <joint name="hip_${prefix}_joint" type="revolute">
      <axis xyz="0 0 1"/>
      <parent link="body"/>
      <child link="hip_${prefix}"/>
      <dynamics damping="0.1" friction="0.1"/>
      <limit effort="35.0" lower="-${pi/2}" upper="${pi/2}" velocity="${pi}"/>
      <xacro:if value="${prefix == 'LF'}">
        <origin xyz="-0.05 0.20 0" rpy="${pi/2} ${pi} 0" />
      </xacro:if>
      <xacro:if value="${prefix == 'LB'}">
        <origin xyz="-0.05 -0.20 0" rpy="-${pi/2} ${pi} 0" />
      </xacro:if>
      <xacro:if value="${prefix == 'RB'}">
        <origin xyz="0.05 -0.20 0" rpy="${pi/2} ${pi} ${pi}" />
      </xacro:if>
      <xacro:if value="${prefix == 'RF'}">
        <origin xyz="0.05 0.20 0" rpy="-${pi/2} ${pi} ${pi}" />
      </xacro:if>

    </joint>
  </xacro:macro>

  <xacro:hip prefix="RF"/>
  <xacro:hip prefix="LF"/>
  <xacro:hip prefix="RB"/>
  <xacro:hip prefix="LB"/>

  <xacro:macro name="leg1" params="prefix">
    <link name="leg1_${prefix}">
      <visual>
        <origin xyz="0 -0.2 -0.05" rpy="0 0 0" />
        <geometry>
          <mesh filename="${meshes_folder}/leg1.STL"/>
        </geometry>
        <material name="black"/>
      </visual>
      <collision>
        <origin xyz="0 -0.2 -0.05" rpy="0 0 0" />
        <geometry>
          <mesh filename="${meshes_folder}/leg1.STL"/>
        </geometry>
      </collision>
      <xacro:default_inertial mass="1"/>
    </link>

    <joint name="leg1_${prefix}_joint" type="revolute">
      <axis xyz="1 0 0"/>
      <parent link="hip_${prefix}"/>
      <child link="leg1_${prefix}"/>
      <dynamics damping="0.1" friction="0.1"/>
      <limit effort="35.0" lower="-${pi*2/3}" upper="${pi*2/3}" velocity="${pi}"/>
      <xacro:if value="${prefix == 'LF'}">
        <origin xyz="0.05 0 0" rpy="-${pi/2} 0 0" />
      </xacro:if>
      <xacro:if value="${prefix == 'LB'}">
        <origin xyz="0.05 0 0" rpy="${pi/2} 0 0" />
      </xacro:if>
      <xacro:if value="${prefix == 'RB'}">
        <origin xyz="0.05 0 0" rpy="${pi/2} 0 0" />
      </xacro:if>
      <xacro:if value="${prefix == 'RF'}">
        <origin xyz="0.05 0 0" rpy="-${pi/2} 0 0" />
      </xacro:if>

    </joint>
  </xacro:macro>

  <xacro:leg1 prefix="RF"/>
  <xacro:leg1 prefix="LF"/>
  <xacro:leg1 prefix="RB"/>
  <xacro:leg1 prefix="LB"/>

  <xacro:macro name="leg2" params="prefix">
    <link name="leg2_${prefix}">
      <visual>
        <origin xyz="-0.025 -0.025 -0.225" rpy="0 0 0" />
        <geometry>
          <mesh filename="${meshes_folder}/leg2.STL"/>
        </geometry>
        <material name="black"/>
      </visual>
      <collision>
        <origin xyz="-0.025 -0.025 -0.225" rpy="0 0 0" />
        <geometry>
          <mesh filename="${meshes_folder}/leg2.STL"/>
        </geometry>
      </collision>
      <xacro:default_inertial mass="1"/>
    </link>

    <joint name="leg2_${prefix}_joint" type="revolute">
      <axis xyz="1 0 0"/>
      <parent link="leg1_${prefix}"/>
      <child link="leg2_${prefix}"/>
      <dynamics damping="0.1" friction="0.1"/>
      
      <xacro:if value="${prefix == 'LF'}">
        <origin xyz="0.035 -0.18 0" rpy="${pi*2/3} 0 0" />
        <limit effort="35.0" lower="-${pi*1/12}" upper="${pi*2/3}" velocity="${pi}"/>
      </xacro:if>
      <xacro:if value="${prefix == 'RF'}">
        <origin xyz="0.035 -0.18 0" rpy="${pi*1/3} 0 0" />
        <limit effort="35.0" lower="-${pi*2/3}" upper="${pi*1/12}" velocity="${pi}"/>
      </xacro:if>
      <xacro:if value="${prefix == 'RB'}">
        <origin xyz="0.035 -0.18 0" rpy="${pi*1/3} 0 0" />
        <limit effort="35.0" lower="-${pi*2/3}" upper="${pi*1/12}" velocity="${pi}"/>
      </xacro:if>
      <xacro:if value="${prefix == 'LB'}">
        <origin xyz="0.035 -0.18 0" rpy="${pi*2/3} 0 0" />
        <limit effort="35.0" lower="-${pi*1/12}" upper="${pi*2/3}" velocity="${pi}"/>

      </xacro:if>

    </joint>
  </xacro:macro>

  <xacro:leg2 prefix="LF"/>
  <xacro:leg2 prefix="RF"/>
  <xacro:leg2 prefix="LB"/>
  <xacro:leg2 prefix="RB"/>


  <ros2_control name="GazeboSystem" type="system">
    <hardware>
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>

    <joint name="hip_RF_joint">
      <command_interface name="position">
        <param name="min">-10</param>
        <param name="max">10</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>

  </ros2_control>

  <gazebo>
    <plugin filename="libgazebo_ros2_control.so" name="gazebo_ros2_control">
      <robot_sim_type>gazebo_ros2_control/GazeboSystem</robot_sim_type>
      <parameters>/home/evence/code_file/ros2_ws/orthrus/src/orthrus_ros2_pack/orthrus_sim/orthrus_gazebo/config/orthrus.yaml</parameters>
    </plugin>
  </gazebo>
</robot>

